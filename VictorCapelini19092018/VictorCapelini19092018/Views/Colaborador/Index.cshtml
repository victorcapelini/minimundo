@model IList<Colaborador>

    @{
        ViewData["Title"] = "Index";
    }

    <h2>Index</h2>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Nome
                </th>
                <th>
                    Empresa
                </th>
                <th>
                    Cargo
                </th>
                <th>
                    Status
                </th>
                <th>
                    Salário
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pessoa.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Empresa.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cargo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salario)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                        <a asp-action="Contrata" asp-route-id="@item.Id">Contratar</a> |
                        <a asp-action="Demite" asp-route-id="@item.Id">Demitir</a> 
                    </td>
                </tr>
            }
        </tbody>
    </table>
